<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backwithoutheader"
    tools:context=".progress"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="75dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/qqv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/avenirroman"
        android:gravity="center"
        android:shadowColor="@color/textgrey"
        android:shadowRadius="15"
        android:text="Quick Quiz Vizz"
        android:textColor="@color/textgrey"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/getyourselftested"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenirroman"
        android:text="Get Yourself Tested"
        android:gravity="center"
        android:layout_marginBottom="80dp"
        android:textColor="@color/textgrey"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenirroman"
        android:text=""
        android:shadowColor="@color/textgrey"
        android:shadowRadius="15"
        android:gravity="center"
        android:layout_marginBottom="150dp"
        android:textColor="@color/textgrey"
        android:textSize="40sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:theme="@style/ProgressBarStyle"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenirroman"
        android:text="Loading ...."
        android:gravity="center"
        android:textColor="@color/textgrey"
        android:textSize="15sp" />

</LinearLayout>