<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/backwithoutheader"
    android:paddingTop="100dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">

    <TextView
        android:id="@+id/qqv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenirroman"
        android:gravity="center"
        android:shadowColor="@color/textgrey"
        android:shadowRadius="15"
        android:text="Quick\nQuiz\nVizz"
        android:textColor="@color/textgrey"
        android:textSize="60sp" />

    <TextView
        android:layout_below="@id/qqv"
        android:id="@+id/getyourselftested"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenirroman"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Get Yourself Tested"
        android:textColor="@color/textgrey"
        android:textSize="15sp" />

        <Button
            android:layout_below="@id/getyourselftested"
            android:id="@+id/loginwithemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="@drawable/roundbutton"
            android:fontFamily="@font/avenirroman"
            android:text="Login with Email"
            android:textAllCaps="false"
            android:textColor="@color/textgrey" />


        <Button
            android:layout_below="@id/loginwithemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:id="@+id/signup"
            android:background="@null"
            android:text="New User ?  Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/textgrey" />

</RelativeLayout>